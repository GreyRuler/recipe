<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.NMedia" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:autoCompleteTextViewStyle">@style/cursorColor</item>
    </style>

    <style name="Widget.AppTheme.LikeCheckbox" parent="Widget.MaterialComponents.Button.TextButton.Icon">
        <item name="icon">@drawable/ic_like_24dp</item>
        <item name="iconTint">@color/like_checkbox_tint</item>
        <item name="android:minWidth">@dimen/normal_spacing</item>
        <item name="android:minHeight">@dimen/normal_spacing</item>
    </style>

    <style name="Widget.AppTheme.ShareCheckbox" parent="Widget.MaterialComponents.Button.TextButton.Icon">
        <item name="icon">@drawable/ic_baseline_share_24</item>
        <item name="iconTint">@color/share_tint</item>
        <item name="android:minWidth">@dimen/normal_spacing</item>
        <item name="android:minHeight">@dimen/normal_spacing</item>
    </style>

    <style name="Widget.AppTheme.OptionsCheckbox" parent="Widget.MaterialComponents.Button.TextButton.Icon">
        <item name="icon">@drawable/ic_baseline_more_vert_24</item>
        <item name="iconTint">@color/options_tint</item>
        <item name="android:minWidth">@dimen/normal_spacing</item>
        <item name="android:minHeight">@dimen/normal_spacing</item>
    </style>

    <style name="Widget.AppTheme.PlayVideoCheckbox" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="android:src">@drawable/ic_play_24dp</item>
        <item name="backgroundTint">@color/white</item>
        <item name="borderWidth">0dp</item>
        <item name="android:minWidth">@dimen/normal_spacing</item>
        <item name="android:minHeight">@dimen/normal_spacing</item>
    </style>

    <style name="Widget.AppTheme.CloseCheckbox" parent="Widget.MaterialComponents.Button.TextButton.Icon">
        <item name="icon">@drawable/ic_close_24dp</item>
        <item name="iconTint">@color/close_tint</item>
        <item name="android:minWidth">@dimen/normal_spacing</item>
        <item name="android:minHeight">@dimen/normal_spacing</item>
    </style>

    <style name="Widget.AppTheme.AddCheckbox" parent="Widget.MaterialComponents.Button.TextButton.Icon">
        <item name="icon">@drawable/ic_add_24dp</item>
        <item name="iconTint">@color/close_tint</item>
        <item name="android:minWidth">@dimen/normal_spacing</item>
        <item name="android:minHeight">@dimen/normal_spacing</item>
    </style>

    <style name="Widget.AppTheme.AttachButton" parent="Widget.MaterialComponents.Button.TextButton.Icon">
        <item name="icon">@drawable/ic_attach_file_24dp</item>
        <item name="iconTint">@color/close_tint</item>
        <item name="android:minWidth">@dimen/normal_spacing</item>
        <item name="android:minHeight">@dimen/normal_spacing</item>
    </style>

    <style name="cursorColor" parent="Widget.AppCompat.AutoCompleteTextView">
        <item name="android:textCursorDrawable">@drawable/cursor</item>
    </style>

